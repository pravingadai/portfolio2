    "outDir": "dist",
    "noEmit": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "ES2020"
  },
  "include": ["server/**/*", "shared/**/*", "api/**/*"],
  "exclude": ["node_modules", "client"]
}